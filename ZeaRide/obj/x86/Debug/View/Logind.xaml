<Page
    x:Class="ZeaRide.View.Logind"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZeaRide.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#fff387">

    <!--  
    ============================================
    Denne side er designet af Mikkel O
    ============================================
    -->

    <Grid>
        <Grid VerticalAlignment="Top" Background="Black" Padding="15 25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
            </Grid>
            <Grid Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock FontSize="26" FontFamily="Bold" Foreground="White" Text="Log ind"></TextBlock>
            </Grid>
            <Grid Grid.Column="2" HorizontalAlignment="Right">
            </Grid>
        </Grid>
        <Grid/>

        <StackPanel Background="White" Margin="0 200 0 200" Width="600" HorizontalAlignment="Center">
            <TextBlock Margin="0 0 0 20" Text="Velkommen tl ZeaRide" FontFamily="Arial Black" HorizontalAlignment="Center"/>
            <TextBlock Margin="0 0 0 10" Text="Logind for at fortsætte, eller opret en bruger." FontFamily="Arial Black" HorizontalAlignment="Center"/>
            <TextBlock Margin="0 0 0 4" Text="Brugernavn" FontWeight="Bold" FontSize="16"/>
            <TextBox BorderBrush="Black" Margin="0,0,20,0" FontSize="25" Height="50" Width="300" PlaceholderText="eks. jens@zealand.dk"/>
            <TextBlock Margin="0 10 0 4" Text="Kodeord" FontWeight="Bold" FontSize="16"/>
            <PasswordBox BorderBrush="Black" Margin="0,0,20,0" FontSize="25" Height="50" Width="300" PlaceholderText="******" PasswordChar="*"></PasswordBox>
            <Button Margin="0 20 0 0" Content="Login" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black" Background="#FFF387" Padding="10 5" Command="{Binding LoginCommand}"></Button>
            <!--<TextBlock Text="Forkert brugernavn eller kodeord" Visibility="{Binding ForkertKode}" Foreground="Red" FontSize="18"/>-->
            <TextBlock Margin="0 10 0 50" Text="Opret bruger" FontFamily="Arial Black" TextDecorations="Underline" HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</Page>

